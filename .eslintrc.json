{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "globals": {
    "Chart": "readonly",
    "API": "readonly",
    "console": "readonly",
    "localStorage": "readonly",
    "fetch": "readonly",
    "FormData": "readonly",
    "URLSearchParams": "readonly",
    "URL": "readonly",
    "Blob": "readonly",
    "FileReader": "readonly"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "semi": ["warn", "always"],
    "quotes": ["warn", "single", { "avoidEscape": true }],
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "comma-dangle": ["warn", "never"],
    "no-trailing-spaces": "warn",
    "eol-last": ["warn", "always"]
  },
  "ignorePatterns": [
    "node_modules/",
    "*.min.js",
    "vendor/"
  ]
}
